<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/bluegray2" />
      <stroke
          android:width="1dp"
          android:color="@color/bluegray2" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item android:state_enabled="false" >
    <shape>
      <solid
          android:color="@color/lightgray" />
      <stroke
          android:width="1dp"
          android:color="@color/lightgray" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="6dp"
          android:top="6dp"
          android:right="6dp"
          android:bottom="6dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid
          android:color="@color/bluegray" />
      <stroke
          android:width="1dp"
          android:color="@color/bluegray" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="6dp"
          android:top="6dp"
          android:right="6dp"
          android:bottom="6dp" />
    </shape>
  </item>
</selector>