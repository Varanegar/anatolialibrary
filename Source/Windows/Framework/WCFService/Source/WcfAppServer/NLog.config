<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<target name="console" xsi:type="Console" layout="${date:format=dd-MM-yyyy HH\:mm\:ss} | ${level:uppercase=true} | ${message}" />
		<target name="file" xsi:type="File" fileName="${basedir}/log.txt" layout="${date:format=dd-MM-yyyy HH\:mm\:ss} | ${level:uppercase=true} | ${message}" />
	</targets>

	<rules>
		<logger name="*" minlevel="Trace" writeTo="file" />
	</rules>
</nlog>