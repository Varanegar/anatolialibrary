
@{
    ViewBag.Title = "Apps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container app-management-page">
    <h2>Apps</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div id="app-management-grid"></div>
        </div>
    </div>
    <script type="text/x-kendo-template" id="toolbar-template">
        <div class="toolbar">
            <button type="button" data-bind="click: addApp" class="k-button k-button-icontext add-user">
                <span class="k-icon k-add"></span>افزودن
            </button>
        </div>
    </script>

    <div class="hidden">
        <div id="add-app-window" style="padding:-5px;" data-bind="kendoWindow: { isOpen: showAppDialog, width: 400, resizable:false, title: 'App', position: { top: '20%', left:'30%' } }">
            <div class="row">
                <div class="form-group">
                    <input id="appId" type="hidden" />
                    <label for="appName">App Name:</label>
                    <input class="form-control" id="appName" name="appName" type="text" data-bind="value: appName" placeholder="نام برنامه" />
                </div>
                <div class="form-group">
                    <button type="button" data-bind="click: appSave" class="btn btn-success">
                        <span class="glyphicon glyphicon-save" aria-hidden="true"></span> ثبت
                    </button>
                    <button type="button" data-bind="click: appCancel" class="btn btn-warning">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> انصراف
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            ko.applyBindings(new appsViewModel(), $('.app-management-page')[0]);
        });
    </script>
}